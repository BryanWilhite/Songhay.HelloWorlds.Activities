{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "dotnet",
            "label": "dotnet build",
            "isBackground": true,
            "type": "shell",
            "args": [
                "build",
                "Songhay.HelloWorlds.Activities.sln"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "label": "dotnet build [Release]",
            "isBackground": true,
            "type": "shell",
            "args": [
                "build",
                "Songhay.HelloWorlds.Activities.sln",
                "--configuration",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceRoot}/"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "label": "dotnet run GetHelloWorldActivity [Release]",
            "isBackground": true,
            "type": "shell",
            "args": [
                "run",
                "--configuration",
                "Release",
                "--",
                "GetHelloWorldActivity",
                "--world-name",
                "Saturn"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Songhay.HelloWorlds.Shell"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "label": "dotnet run GetHelloWorldActivity Help [Release]",
            "isBackground": true,
            "type": "shell",
            "args": [
                "run",
                "--configuration",
                "Release",
                "--",
                "GetHelloWorldActivity",
                "--help"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Songhay.HelloWorlds.Shell"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "label": "dotnet run GetHelloWorldReportActivity [Release]",
            "isBackground": true,
            "type": "shell",
            "args": [
                "run",
                "--configuration",
                "Release",
                "--",
                "GetHelloWorldReportActivity"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Songhay.HelloWorlds.Shell"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "dependsOn": "clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean release",
            "command": "dotnet clean --configuration Release",
            "type": "shell",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet publish --configuration Release",
            "type": "shell",
            "dependsOn": "clean release",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [Songhay.HelloWorlds.Functions.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/Songhay.HelloWorlds.Functions.Tests/Songhay.HelloWorlds.Functions.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "func",
            "dependsOn": "build",
            "options": {
                "cwd": "${workspaceFolder}/Songhay.HelloWorlds.Functions"
            },
            "command": "start --build --csharp",
            "isBackground": true,
            "problemMatcher": "$func-watch"
        },
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-powershell-watch",
            "isBackground": true
        }
    ]
}